{#
    Button Component
    
    Parameters:
    - type: 'primary', 'secondary', 'success', 'danger' (default: 'primary')
    - size: 'sm', 'md', 'lg' (default: 'md')
    - href: URL for link buttons
    - onclick: JavaScript for click handler
    - disabled: boolean
    - icon: icon name (optional)
    - class: additional CSS classes
#}

{% set buttonType = type|default('primary') %}
{% set buttonSize = size|default('md') %}
{% set baseClass = 'btn btn-' ~ buttonType %}

{% if buttonSize == 'sm' %}
    {% set sizeClass = 'btn-sm' %}
{% elseif buttonSize == 'lg' %}
    {% set sizeClass = 'btn-lg' %}
{% else %}
    {% set sizeClass = '' %}
{% endif %}

{% set allClasses = [baseClass, sizeClass, class|default('')]|join(' ')|trim %}

{% if href is defined %}
    <a href="{{ href }}" class="{{ allClasses }}" {% if onclick is defined %}onclick="{{ onclick }}"{% endif %}>
        {% if icon is defined %}
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                {% if icon == 'plus' %}
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                {% elseif icon == 'edit' %}
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                {% elseif icon == 'trash' %}
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                {% elseif icon == 'check' %}
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                {% endif %}
            </svg>
        {% endif %}
        {{ block('content') }}
    </a>
{% else %}
    <button 
        type="{{ buttonTag|default('button') }}"
        class="{{ allClasses }}" 
        {% if disabled is defined and disabled %}disabled{% endif %}
        {% if onclick is defined %}onclick="{{ onclick }}"{% endif %}
    >
        {% if icon is defined %}
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                {% if icon == 'plus' %}
                    <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd"></path>
                {% elseif icon == 'edit' %}
                    <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
                {% elseif icon == 'trash' %}
                    <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                {% elseif icon == 'check' %}
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                {% endif %}
            </svg>
        {% endif %}
        {{ block('content') }}
    </button>
{% endif %}